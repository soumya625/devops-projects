pipeline {
    agent any

    environment {
        APP_NAME = "flask-jenkins-enterprise"
        IMAGE_NAME = "flask-jenkins-enterprise"
        SONAR_HOST = "http://localhost:9000"
        SONAR_TOKEN = credentials('SONAR_TOKEN_ID')  // Jenkins credentials
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/<your-username>/flask-jenkins-sonarqube.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                sh """
                sonar-scanner \
                    -Dsonar.projectKey=flask-enterprise \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=$SONAR_HOST \
                    -Dsonar.login=$SONAR_TOKEN
                """
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh """
                docker rm -f $APP_NAME || true
                docker run -d -p 5000:5000 --name $APP_NAME $IMAGE_NAME
                """
            }
        }
    }

    post {
        success {
            echo " Flask app deployed successfully with SonarQube analysis!"
        }
    }
}
