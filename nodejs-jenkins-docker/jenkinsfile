pipeline {
    agent any

    environment {
        DOCKER_BUILDKIT = '1'
        IMAGE_NAME = "nodejs-jenkins-docker-app"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dir('nodejs-jenkins-docker') {
                        sh 'docker build -t $IMAGE_NAME .'
                    }
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh 'docker run -d -p 3000:3000 $IMAGE_NAME || true'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed successfully."
        }
    }
}
