pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/<your-username>/nodejs-jenkins-docker.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t nodejs-jenkins-app .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker run -d -p 3000:3000 nodejs-jenkins-app'
            }
        }
    }
}
