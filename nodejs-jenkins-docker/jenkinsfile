pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/soumya625/devops-projects.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t nodejs-jenkins-docker .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker rm -f nodejs-jenkins-docker || true'
                sh 'docker run -d -p 80:3000 --name nodejs-jenkins-docker nodejs-jenkins-docker'
            }
        }
    }
}
