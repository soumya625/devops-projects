pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/soumya625/devops-projects.git'
            }
        }

        stage('Build Image') {
            steps {
                sh 'sudo docker build -t nodejs-jenkins-docker-app .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                sudo docker rm -f nodejs-jenkins-docker-app || true
                sudo docker run -d -p 80:3000 --name nodejs-jenkins-docker-app nodejs-jenkins-docker-app
                '''
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful! Visit EC2 Public IP.'
        }
    }
}
